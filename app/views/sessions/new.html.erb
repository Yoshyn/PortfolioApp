<%= content_for :active_logIn, "class=active" %>

<div class="page-header">
	<h1>Login Page</h1>
</div>

<div class="row">
	<div class="span4"></div>
	<div class="span4">
		<div class="well">
			<div class="center">
				<%= form_tag session_path do %>
				<p>
					<%= label_tag :login %>
					<%= text_field_tag :login %>
					<%= label_tag :password %>
					<%= password_field_tag :password %>
				</p>
				<%= submit_tag "login", :class => "btn"%>
			</div>
			<% end %>
		</div>
	</div>
</div>
