<%= content_for :active_logIn, "class=active" %>

<div class="page-header">
	<h1>Login Page</h1>
</div>

<article class="center">
	<%= form_tag session_path do %>
	<p>
		<%= label_tag :login %>
		<%= text_field_tag :login %>
		<%= label_tag :password %>
		<%= password_field_tag :password %>
	</p>
	<%= submit_tag "login", :class => "btn btn-success" %>
	</div>
	<% end %>
</article>
