<%= content_for :active_home, "class=active" %>
<% if notice %>
<div id="notice" class="alert alert-info">
	<button type="button" class="close" data-dismiss="alert">
		×
	</button>
	<%= notice %>
</div>
<% end %>
<div class="hero-unit">
	<h2><%= @profile.title %></h2>
	<p>
		<%= truncate(@profile.description, :length => 400, :separator => ' ') %>
	</p>
	<%= link_to 'Learn more »', @profile, :class => "btn btn-info btn-large" %>
</div>

<h2>Lasts projects : </h2>
<div class="row">
	<% @projects.each do |project| %>
	<div class="span4">
		<div class="well">
			<h3><%= truncate(project.title, :length => 18) %></h3>
			<p>
				<%= truncate(project.description, :length => 180) %>
			</p>
			<%= link_to 'View details »', projects_path(:anchor => 'tab-'+project.title), :class => "btn" %>
		</div>
	</div>
	<% end %>
</div>