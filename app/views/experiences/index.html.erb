<%= content_for :active_experiences, "class=active" %>

<div class="page-header">
	<h1>Experiences</h1>
</div>

<section class="ac-container">
	<% i = 1 %>
	<% @experiences.each do |experience| %>
		<div>
			<input id="ac-<%= i %>" name="accordion-1" type="checkbox" />
			<label for="ac-<%= i %>">
				<%= experience.compagny %> : <%= experience.position %>
			</label>
			<article class="ac-small">
				<p>
					<em class="bullet"></em>
					<span>Start : <%= experience.start_date %></span>
					<em class="bullet"></em>
					<span> End : <%= experience.end_date %></span>
					<% if logged_in? %>
						<em class="bullet"></em>
						<span><%= link_to 'Edit', edit_experience_path(experience) %></span>
						<em class="bullet"></em>
						<span><%= link_to 'Destroy', experience, confirm: 'Are you sure?', method: :delete %></span>
					<% end %>
					<%= experience.description %>
				</p>
				<p>
					<a href="<%= experience.website %>"><%= experience.website %></a>
				</p>
				<p>
					Comp√©tences : <%= experience.keywords %>
				</p>
				<% pictures = experience.pictures %>
				<% if !pictures.empty? %>
					<div class="carousel-pictures">
						<div id="myCarousel<%=project.id%>" class="carousel slide">
						 <!-- Carousel items -->
							<div class="carousel-inner">
								<% pictures.each_index do |e_index| %>
									<% if e_index == 0 %>
										<div class="active item">
											<%= image_tag(pictures[e_index].url) if pictures[e_index].url.present? %>
										</div>
									<% else %>
										<div class="item">
											<%= image_tag(pictures[e_index].url) if pictures[e_index].url.present? %>
										</div>
									<% end %>	
								<% end %>				
							</div>
							<% if pictures.count > 1 %>
							<!-- Carousel nav -->
							<a class="carousel-control left" href="#myCarousel<%=project.id%>" data-slide="prev">&lsaquo;</a>
							<a class="carousel-control right" href="#myCarousel<%=project.id%>" data-slide="next">&rsaquo;</a>
							<% end %>
						</div>	
					</div>
				<% end %>			
			</article>
		</div>
		<% i += 1 %>
	<% end %>
</section>
<br />

<%= link_to 'New Experience', new_experience_path, :class => "btn"  unless !logged_in? %>
