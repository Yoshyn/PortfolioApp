<%= content_for :active_projects, "class=active" %>

<div class="page-header">
	<h1>Projects</h1>
</div>

<div class="accordion">
	<% @projects.each do |project| %>
	<div id="tab-<%= project.title %>">
		<a href="#tab-<%= project.title %>" class="tab"><%= project.title %></a>
		<div class="content">
			<em class="bullet"></em><span>Status : <%= project.status %></span><em class="bullet"></em><span> Website : <%= project.website %></span>
			<% if logged_in? %>
			<em class="bullet"></em><span><%= link_to 'Edit', edit_project_path(project) %></span><em class="bullet"></em><span><%= link_to 'Destroy', project, confirm: 'Are you sure?', method: :delete %></span>
			<% end %>
			<p>
				<%= project.description %>
			</p>
			<h1>Technologies : <%= project.technologies %></h1>
			<% pictures = project.pictures %>
			<% if !pictures.empty? %>
			<div class="carousel-pictures">
				<div id="myCarousel" class="carousel slide">
					 <!-- Carousel items -->
					<div class="carousel-inner">
					
					<% pictures.each_index do |e| %>
						<% if e == 0 %>
							<div class="active item">
								<%= image_tag(pictures[e].url) if pictures[e].url.present? %>
							</div>
						<% else %>
							<div class="item">
								<%= image_tag(pictures[e].url) if pictures[e].url.present? %>
							</div>
						<% end %>	
					<% end %>				
					</div>
					<% if pictures.count > 1 %>
					<!-- Carousel nav -->
					<a class="carousel-control left" href="#myCarousel" data-slide="prev">&lsaquo;</a>
					<a class="carousel-control right" href="#myCarousel" data-slide="next">&rsaquo;</a>
					<% end %>
				</div>	
			</div>
			<% end %>				
		</div>
	</div>
	<% end %>
</div>
<br />

<%= link_to 'New Project', new_project_path unless !logged_in? %>
