<%= content_for :active_pictures, "class=active" %>

<div class="page-header">
	<h1>Listing pictures</h1>
</div>

<article class="center">
	<table class="table table-bordered">
		<tr>
			<th>Legend</th>
			<th>Picture</th>
			<th></th>
			<th></th>
			<th></th>
		</tr>

		<% @pictures.each do |picture| %>
		<tr>
			<td><%= picture.legend %></td>
			<td><%= image_tag(picture.url, :width => 50) if picture.url.present? %></td>
			<td><%= link_to 'Show', picture, :class => "btn btn-info" %></td>
			<td><%= link_to 'Edit', edit_picture_path(picture), :class => "btn btn-warning" %></td>
			<td><%= link_to 'Destroy', picture, confirm: 'Are you sure?', method: :delete , :class => "btn btn-danger" %></td>
		</tr>
		<% end %>
	</table>
	<br />
	<%= link_to 'New Picture', new_picture_path, :class => "btn"  unless !logged_in? %>
</article>