<%= content_for :active_educations, "class=active" %>

<h1>Educations</h1>

<div class="accordion">
	<% @educations.each do |education| %>
	<div id="tab-<%= education.school %>">
		<a href="#tab-<%= education.school %>" class="tab"><%= education.school %></a>
		<div class="content">
			<em class="bullet"></em><span>Start : <%= education.start_date %></span><em class="bullet"></em><span> End : <%= education.end_date %></span>
			<% if logged_in? %>
				<em class="bullet"></em><span><%= link_to 'Edit', edit_education_path(education) %></span><em class="bullet"></em><span><%= link_to 'Destroy', education, confirm: 'Are you sure?', method: :delete %></span>
			<% end %>
			<p>
				<%= education.description %>
			</p>
			<p>
				<a href="<%= education.website %>"><%= education.website %></a>
			</p>
			<h1>Comp√©tences : <%= education.keywords %></h1>
			<% pictures = education.pictures %>
			<% if !pictures.empty? %>
			<div class="carousel-pictures">
				<div id="myCarousel" class="carousel slide">
					 <!-- Carousel items -->
					<div class="carousel-inner">
					
					<% pictures.each_index do |e| %>
						<% if e == 0 %>
							<div class="active item">
								<%= image_tag(pictures[e].url) if pictures[e].url.present? %>
							</div>
						<% else %>
							<div class="item">
								<%= image_tag(pictures[e].url) if pictures[e].url.present? %>
							</div>
						<% end %>	
					<% end %>				
					</div>
					<!-- Carousel nav -->
					<a class="carousel-control left" href="#myCarousel" data-slide="prev">&lsaquo;</a>
					<a class="carousel-control right" href="#myCarousel" data-slide="next">&rsaquo;</a>
				</div>	
			</div>
			<% end %>
		</div>
	</div>
	<% end %>
</div>
<br />

<%= link_to 'New Education', new_education_path  unless !logged_in? %>
